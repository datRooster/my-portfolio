  DAILY          // Daily rate
  PROJECT        // Fixed project price
  MONTHLY        // Monthly retainer
  CUSTOM         // Custom pricing
  FREE           // Free service
}

// Service Status
enum ServiceStatus {
  DRAFT          // Not published
  ACTIVE         // Available for booking
  PAUSED         // Temporarily unavailable
  ARCHIVED       // No longer offered
}

// Inquiry Status
enum InquiryStatus {
  NEW            // Just received
  REVIEWED       // Under review
  RESPONDED      // Response sent
  IN_DISCUSSION  // Active conversation
  QUOTED         // Quote provided
  ACCEPTED       // Client accepted
  REJECTED       // Client declined
  COMPLETED      // Project finished
  CANCELLED      // Cancelled
}

// Inquiry Priority
enum InquiryPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

// Inquiry Source
enum InquirySource {
  WEBSITE        // Contact form on website
  EMAIL          // Direct email
  PHONE          // Phone call
  REFERRAL       // Word of mouth
  SOCIAL_MEDIA   // Social media
  LINKEDIN       // LinkedIn message
  OTHER          // Other sources
}

// ================================
// VISITOR ANALYTICS
// ================================

model VisitorSession {
  id           String   @id @default(uuid())
  fingerprint  String   // Hash anonimo per identificare sessioni uniche
  
  // Timing
  firstSeen    DateTime @default(now())
  lastSeen     DateTime @default(now())
  
  // Attività
  pageViews    Int      @default(1)
  currentPage  String?
  referrer     String?
  
  // Informazioni tecniche (anonime)
  isMobile     Boolean  @default(false)
  country      String?  // Opzionale per statistiche geografiche
  
  // Indici per performance
  @@index([fingerprint])
  @@index([lastSeen])
  @@index([firstSeen])
  @@map("visitor_sessions")
}
